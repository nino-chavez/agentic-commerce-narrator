    {
      "id": "fn-hosp-guest-request-management",
      "name": "Guest Request Management",
      "description": "AI-powered service request system handling housekeeping needs, amenity orders, maintenance issues, and concierge services with automated routing and real-time tracking",
      "traditional_workflow": "Guests call the front desk or housekeeping for requests, describing needs to staff who manually write notes or enter tickets. Requests are relayed via phone calls, walkie-talkies, or paper slips to appropriate departments. There is no centralized tracking of request status, and guests must call back for updates. Priority is determined by who answers the phone, not by request urgency or guest value. Maintenance issues may go unreported for hours if guests don't want to bother calling. Completion is not consistently confirmed or tracked.",
      "agentic_workflow": "Guest request agents enable submission via mobile app, in-room tablet, voice command, or chat, using NLP to understand and categorize requests automatically. Routing agents assign tasks to appropriate staff based on request type, location, priority, and workload balancing. Tracking agents monitor request status in real-time, sending automatic updates to guests. Priority scoring agents consider guest tier, request urgency, and operational constraints to optimize fulfillment order. Follow-up agents confirm completion and capture satisfaction ratings, feeding data into service quality analytics.",
      "agent_architecture": {
        "orchestrator": {
          "name": "Guest Request Orchestrator",
          "role": "Manages end-to-end service request lifecycle from submission through fulfillment and confirmation, coordinating multiple departments and tracking satisfaction",
          "responsibilities": [
            "Route requests to appropriate departments",
            "Prioritize requests based on urgency and guest value",
            "Track fulfillment status and timing",
            "Confirm completion and capture feedback"
          ]
        ],
        "super_agents": [
          {
            "name": "Request Intake Agent",
            "role": "Captures guest requests via multiple channels using NLP to understand and categorize needs",
            "capabilities": [
              "Multi-channel request capture (app, voice, chat, tablet)",
              "Natural language understanding",
              "Request categorization and tagging",
              "Clarification questions for ambiguous requests"
            ]
          },
          {
            "name": "Intelligent Routing Agent",
            "role": "Assigns requests to optimal staff members based on type, location, workload, and skills",
            "capabilities": [
              "Department routing (housekeeping, maintenance, concierge)",
              "Staff workload balancing",
              "Location-based assignment",
              "SLA management by request type"
            ]
          },
          {
            "name": "Priority Scoring Agent",
            "role": "Calculates request priority based on urgency, guest tier, request type, and operational impact",
            "capabilities": [
              "Dynamic priority scoring",
              "VIP request escalation",
              "Safety/maintenance urgency detection",
              "Queue optimization"
            ]
          },
          {
            "name": "Status Tracking Agent",
            "role": "Monitors request fulfillment progress and provides real-time updates to guests",
            "capabilities": [
              "Real-time status monitoring",
              "Automated guest notifications",
              "SLA breach alerting",
              "Completion confirmation"
            ]
          }
        ],
        "utility_agents": [
          {
            "name": "Guest Communication Agent",
            "role": "Sends updates and confirmations via guest's preferred channel"
          },
          {
            "name": "Analytics Agent",
            "role": "Tracks request volumes, response times, satisfaction, and identifies service trends"
          }
        ]
      ],
